/* components/book/cover/index.wxss */
.contanier {
  position: relative;
  box-shadow: 2px 2px 3px #e3e3e3;
  width: 240rpx;
  height: 360rpx;
}

.cover {
  height: 100%;
  width: 100%;
}

.description {
  position: absolute;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  padding: 5rpx 10rpx 8rpx 15rpx;
  background-color: white;
}

.title {
  font-size: 24rpx;
}

.author {
  font-size: 20rpx;
  color: #999999;
}

.footer {
  width: 100%;
  height: 50rpx;
  text-align: end;
}

.likes {
  font-size: 20rpx;
  color: #666666;
}

