/* components/classic/music/index.js.wxss */
.music-contanier {
  position: relative;
  width: 100%;
  height: 100%;
}

.control-btn, .cover {
  position: absolute;
  top: 50%;
  left: 50%;
}

.control-btn {
  width: 120rpx;
  height: 120rpx;
  margin-top: -60rpx;
  margin-left: -60rpx;
} 

.cover {
  width: 422rpx;
  height: 422rpx;
  margin-top: -211rpx;
  margin-left: -211rpx;
  border-radius: 50%;
}

.cover.playing {
  animation: rotation 40s linear infinite;
}

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}
