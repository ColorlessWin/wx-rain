/* pages/book-detail/book-detail.wxss */
.contanier, .block {
  width: 100%;
}

.contanier {
  background-color: #f5f5f5;
  padding-bottom: 110rpx;
}

.contanier .block {
  box-sizing: border-box;
  margin-bottom: 30rpx;
  padding: 15rpx 25rpx 10rpx 25rpx;
  background-color: white;
}

.block:last-child {
  margin-bottom: 0rpx;
}

.contanier .block .title {
  font-size: 33rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.header-cover {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-cover .cover {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.header-cover .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.header-cover .author {
  font-size: 28rpx;
  color: #999;
}

.desription .col {
  margin: 10rpx 10rpx;
}

.desription .col .row {
  color: #999;
  display: inline-block;
  min-width: 130rpx;
}

.desription .col .row.info {
  color: black;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
}

.post-fake, .post-comment {
  background-color: white;
  position: absolute;
  bottom: 0;
  width: 100%;
}

.post-fake, .post-comment {
  box-shadow: 1px -1px 2px #e3e3e3;
}

.post-fake {
  height: 110rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  padding: 0rpx 20rpx;
}

.post-fake .input-fake {
  height: 60rpx;
  width: 70%;
  background-color: #f5f5f5;
  color: #999999;
  border-radius: 30rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 60rpx;
}

.post-comment {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.post-comment .top {
  height: 115rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #999999;
  font-size: 28rpx;
}

.post-comment .bottom {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  padding: 25rpx 0;
}

.post-comment .tip {
  width: 694rpx;
  height: 130rpx;
  margin-top: 25rpx;
}