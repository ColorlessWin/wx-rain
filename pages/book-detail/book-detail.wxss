/* pages/book-detail/book-detail.wxss */
.contanier, .block {
  width: 100%;
}

.contanier {
  background-color: #f5f5f5;
}

.contanier .block {
  box-sizing: border-box;
  margin-bottom: 30rpx;
  padding: 15rpx 25rpx 10rpx 25rpx;
  background-color: white;
}

.contanier .block .title {
  font-size: 33rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}

.header-cover {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-cover .cover {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.header-cover .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.header-cover .author {
  font-size: 28rpx;
  color: #999;
}

.desription .col {
  margin: 10rpx 10rpx;
}

.desription .col .row {
  color: #999;
  display: inline-block;
  min-width: 130rpx;
}

.desription .col .row.info {
  color: black;
}