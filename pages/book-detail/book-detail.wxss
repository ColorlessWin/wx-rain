/* pages/book-detail/book-detail.wxss */
.contanier, .block {
  width: 100%;
}

.contanier {
  background-color: #f5f5f5;
}

.contanier .block {
  margin-bottom: 30rpx;
  background-color: white;
}

.header-cover {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-cover .cover {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.header-cover .title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.header-cover .author {
  font-size: 28rpx;
  color: #999;
}